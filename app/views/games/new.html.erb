<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<ul>
<% @random_letters.each do |letter| %>
  <%= letter %>
<% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="word">What is the longest word you can find?</label>
  <input type="text" name="word" placeholder="Type your word here?">
  <input type="submit" value= "Play!" class=btn-submit>
</form>
